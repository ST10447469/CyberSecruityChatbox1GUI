<UserControl x:Class="CybersecurityChatbotGUI.Views.ActivityLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid ItemsSource="{Binding LogEntries}" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat={}{0:g}}"/>
            <DataGridTextColumn Header="Action" Binding="{Binding Action}"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
