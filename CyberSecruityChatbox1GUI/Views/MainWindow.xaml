<Window x:Class="CybersecurityChatbotGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CybersecurityChatbotGUI.Views"
        Title="Cybersecurity Chatbot" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Panel -->
        <StackPanel Grid.Column="0" Background="#F0F0F0">
            <Button Content="Chat" Command="{Binding ShowChatCommand}"/>
            <Button Content="Tasks" Command="{Binding ShowTasksCommand}"/>
            <Button Content="Quiz" Command="{Binding ShowQuizCommand}"/>
        </StackPanel>

        <!-- Dynamic Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>