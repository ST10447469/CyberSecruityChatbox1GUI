<UserControl x:Class="CybersecurityChatbotGUI.Views.QuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="{Binding CurrentQuestion.Text}" FontSize="16"/>

        <ItemsControl ItemsSource="{Binding CurrentQuestion.Options}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton Content="{Binding}" GroupName="QuizOptions"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Text="{Binding Feedback}" Foreground="{Binding IsLastAnswerCorrect, Converter={StaticResource BoolToColorConverter}}"/>
    </StackPanel>
</UserControl>
